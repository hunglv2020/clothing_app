<odoo>
    <record id="view_spec_image_select_wizard_form" model="ir.ui.view">
        <field name="name">spec.image.select.wizard.form</field>
        <field name="model">spec.image.select.wizard</field>
        <field name="arch" type="xml">
            <form string="Select Images">
                <sheet>
                    <!-- Thêm trường này để hợp lệ hóa context -->
                    <group invisible="1">
                        <field name="specification_id"/>
                    </group>

                    <!-- Trường chọn ảnh hiển thị Kanban -->
                    <field name="image_ids" widget="many2many_kanban"
                           context="{'default_specification_id': specification_id}"
                           domain="[('specification_id', '=', False)]">
                        <kanban class="o_spec_image_kanban" default_order="sequence">
                            <field name="image"/>
                            <field name="name"/>
                            <templates>
                                <t t-name="kanban-box">
                                    <div class="o_spec_image_card shadow-sm p-1">
                                        <field name="image" widget="image" class="o_spec_image_large"/>
                                        <div class="fw-bold mt-1 text-center">
                                            <field name="name" placeholder="Untitled"/>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                    </field>
                </sheet>
                <footer>
                    <button name="action_assign_images" string="Assign" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_spec_image_select_wizard" model="ir.actions.act_window">
        <field name="name">Select Images</field>
        <field name="res_model">spec.image.select.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'specification_id': active_id}</field>
    </record>
</odoo>
